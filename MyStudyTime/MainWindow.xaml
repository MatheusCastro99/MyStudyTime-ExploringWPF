<Window x:Class="MyStudyTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStudyTime"
        xmlns:viewModel="clr-namespace:MyStudyTime.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MyStudyTime"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
        
    <Border Background="#272537"
            CornerRadius="25">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>

                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="MyStudyTime"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="22">
            </TextBlock>
            <StackPanel Grid.Row="1">
                <RadioButton Content="Home"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewComand}"/>
                
                <RadioButton Content="Subject"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding SubjectViewComand}"/>
                
                <RadioButton Content="Quiz Me"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="Add"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

            <TextBox Width="350"
                     Height="37"
                     VerticalContentAlignment="Center"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Left"
                     Margin="10, 0, 0, 5"
                     Grid.Column="1"
                     Style="{StaticResource SearchBoxTheme}"/>

            <Button Grid.Column="1"
                    Style="{StaticResource CloseMinMaxButtonTheme}"
                    HorizontalAlignment="Right"
                    VerticalContentAlignment="Center"
                    Command="{Binding CloseViewComand}">
            </Button>

            <ContentControl Grid.Row="1" Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}">
                
            </ContentControl>
        </Grid>

    </Border>
</Window>
