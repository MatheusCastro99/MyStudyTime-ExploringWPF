<UserControl x:Class="MyStudyTime.MVVM.View.SubjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyStudyTime.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#272537">
    <StackPanel>
        <TextBlock Text="Subjects"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="25, 0, 0, 25"/>
        <ItemsControl ItemsSource="{Binding Subjects}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel  Orientation="Horizontal"
                                ItemWidth="135"
                                ItemHeight="155"
                                MaxWidth="675"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="125" Height="145"
                            CornerRadius="15"
                            Margin="5">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="LightBlue" Offset="0.0"/>
                                <GradientStop Color="Blue" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"
                                       Foreground="White"
                                       FontSize="22"
                                       HorizontalAlignment="Center"/>
                            <Button Content="Add Note"
                                    Width="75"
                                    Command="{Binding DataContext.OpenNoteWindowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Background="transparent"
                                    Foreground="White"
                                    Margin="0, 6, 0, 0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="Remove"
                                    Width="75"
                                    Command="{Binding DataContext.RemoveSubjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Background="transparent"
                                    Foreground="White"
                                    Margin="0, 3, 0, 0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <StackPanel Orientation="Vertical" Margin="25, 10, 0, 0">
            <TextBox Width="200"
                     Text="{Binding NewSubject, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="0, 0, 10, 0"/>
            <Button Content="Add Subject"
                    Width="100"
                    Background="#373567"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0, 5, 0, 0"
                    Padding="9, 3, 9, 3"
                    Command="{Binding AddSubjectCommand}"
                    VerticalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
